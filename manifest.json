 {
    "name": "Ad Blocker Gob",
    "version": "1.0",
		 "description": " ",
		 "browser_action":{
			"default_icon": {                    
				"16": "icons/icon-16.png",         
				"24": "icons/icon-24.png",         
				"32": "icons/icon-32.png"          
			},
			"default_title": "Gob blocker",
			"default_popup": "/popup/popup.html"
		 },
		 "background":{
			 "script":[ "background.html","templates/blockOverlay.html" ]
		 },
		 "permissions":[ "webNavigation", "activeTab", "tabs", "<all_urls>"],
		 "content_scripts": [{
			"matches": ["http://*.gob.mx/*","https://*.gob.mx/*"],
			"js": [
				"node_modules/jquery/dist/jquery.min.js",
				"node_modules/svg.js/dist/svg.js", 
				"inject.js",
				"templates/blockOverlay.js"
			],
			"run_at" : "document_end"
	 }],
	 "web_accessible_resources": [
		"templates/blockOverlay.js",
		"inject.js"
	 ],
	 "manifest_version": 2
  }
